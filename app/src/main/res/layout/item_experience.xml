<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:paddingBottom="40dp"
            android:paddingHorizontal="20dp"
            android:orientation="vertical"
            >
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_title_jobStack"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="jobStack"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/tv_workPlace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="workPlace"
                    android:textSize="18dp"
                    android:textStyle="normal"
                    android:textColor="#888888"
                    />
                <TextView
                    android:id="@+id/tv_periode_start"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="periode"
                    android:textSize="16dp"
                    android:textStyle="normal"
                    android:textColor="#C0C6CF"
                    />
                <TextView
                    android:id="@+id/tv_periode_end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="periode"
                    android:textSize="16dp"
                    android:textStyle="normal"
                    android:textColor="#C0C6CF"
                    />
                <TextView
                    android:id="@+id/tv_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="lorem ipsum color si jamet"
                    android:textSize="16dp"
                    android:textStyle="normal"
                    android:textColor="#888888"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</layout>

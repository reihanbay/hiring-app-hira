<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"

        android:id="@+id/container_item_recycler_project"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:background="@drawable/bg_item_recycler"
        android:elevation="2dp"
        android:orientation="horizontal"
        android:paddingHorizontal="15dp"
        android:paddingVertical="10dp"
        app:elevation="2dp">


        <ImageView
            android:id="@+id/image_worker"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/bg_item_recycler"
            android:src="@drawable/ic_ava" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name_worker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_job_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="title"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/linear_skill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_skill_1"
                    android:paddingVertical="3dp"
                    android:paddingHorizontal="5dp"
                    android:layout_margin="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/component_skill"
                    android:gravity="bottom"
                    android:fontFamily="@font/open_sans_semibold"
                    android:textColor="@color/white"
                    android:text="Skill"
                    android:textSize="12sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/tv_skill_2"
                    android:paddingVertical="3dp"
                    android:paddingHorizontal="5dp"
                    android:layout_margin="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/component_skill"
                    android:gravity="bottom"
                    android:fontFamily="@font/open_sans_semibold"
                    android:textColor="@color/white"
                    android:text="Skill"
                    android:textSize="12sp"
                    android:textStyle="normal" />
                <TextView
                    android:id="@+id/tv_skill_3"
                    android:paddingVertical="3dp"
                    android:paddingHorizontal="5dp"
                    android:layout_margin="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/component_skill"
                    android:gravity="bottom"
                    android:fontFamily="@font/open_sans_semibold"
                    android:textColor="@color/white"
                    android:text="Skill"
                    android:textSize="12sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/tv_skill_plus"
                    android:paddingVertical="3dp"
                    android:paddingHorizontal="5dp"
                    android:layout_margin="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:fontFamily="@font/open_sans_semibold"
                    android:textColor="@color/grey"
                    android:text="+"
                    android:textSize="14sp"
                    android:textStyle="normal" />

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</layout>

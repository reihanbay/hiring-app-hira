<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".profile.FormProfileActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingVertical="24dp">

            <TextView
                android:id="@+id/tv_header_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="24dp"
                android:text="@string/completed_data_form"
                android:textAlignment="textStart"
                android:textColor="#888888"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="200dp">
                <ImageView
                    android:id="@+id/img_profile"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="20dp"
                    android:background="@drawable/et_rounded"
                    android:elevation="5dp"
                    android:src="@drawable/ava" />
                <Button
                    android:id="@+id/btn_upload"
                    android:layout_width="120dp"
                    android:layout_height="45dp"
                    android:paddingHorizontal="16dp"
                    android:elevation="5dp"
                    android:text="Upload"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:background="@drawable/btn_primary"
                    android:drawableLeft="@drawable/ic_baseline_add_24"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_fullname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="24dp"
                android:text="Fullname"
                android:textColor="#ABABAB"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_fullname"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="24dp"
                android:background="@drawable/et_rounded"
                android:elevation="2dp"
                android:hint="Input your name..."
                android:inputType="textPersonName"
                android:paddingStart="24dp"
                android:textColor="#888888"
                android:textColorHint="#DDDDDD"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="24dp"
                android:text="Company"
                android:textColor="#ABABAB"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_company"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="24dp"
                android:background="@drawable/et_rounded"
                android:elevation="2dp"
                android:hint="Input your name company"
                android:inputType="textPersonName"
                android:paddingStart="24dp"
                android:textColor="#888888"
                android:textColorHint="#DDDDDD"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_position"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="24dp"
                android:text="Position"
                android:textColor="#ABABAB"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_position"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="24dp"
                android:background="@drawable/et_rounded"
                android:elevation="2dp"
                android:hint="Input your position"
                android:inputType="text"
                android:paddingStart="24dp"
                android:textColor="#888888"
                android:textColorHint="#DDDDDD"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_sector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="24dp"
                android:text="Sector Company"
                android:textColor="#ABABAB"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_sector"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="24dp"
                android:background="@drawable/et_rounded"
                android:elevation="2dp"
                android:hint="Input your Sector Company"
                android:inputType="text"
                android:paddingStart="24dp"
                android:textColor="#888888"
                android:textColorHint="#DDDDDD"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="24dp"
                android:text="City"
                android:textColor="#ABABAB"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_city"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="24dp"
                android:background="@drawable/et_rounded"
                android:elevation="2dp"
                android:hint="Input Your City"
                android:inputType="text"
                android:paddingStart="24dp"
                android:textColor="#888888"
                android:textColorHint="#DDDDDD"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="24dp"
                android:text="Description"
                android:textColor="#ABABAB"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_summary"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="24dp"
                android:background="@drawable/et_rounded"
                android:elevation="2dp"
                android:hint="Input Your/Company Description"
                android:inputType="textMultiLine"
                android:paddingStart="24dp"
                android:textColor="#888888"
                android:textColorHint="#DDDDDD"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_instagram"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="24dp"
                android:text="Instagram"
                android:textColor="#ABABAB"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_instagram"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="24dp"
                android:background="@drawable/et_rounded"
                android:elevation="2dp"
                android:hint="Input Company Instagram"
                android:inputType="text"
                android:paddingStart="24dp"
                android:textColor="#888888"
                android:textColorHint="#DDDDDD"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_linkedin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="24dp"
                android:text="LinkedIn"
                android:textColor="#ABABAB"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_linkedin"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="24dp"
                android:background="@drawable/et_rounded"
                android:elevation="2dp"
                android:hint="Input Company LinkedIn"
                android:inputType="text"
                android:paddingStart="24dp"
                android:textColor="#888888"
                android:textColorHint="#DDDDDD"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_website"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="24dp"
                android:text="Website"
                android:textColor="#ABABAB"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_website"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="24dp"
                android:background="@drawable/et_rounded"
                android:elevation="2dp"
                android:hint="Input Company Website"
                android:inputType="text"
                android:paddingStart="24dp"
                android:textColor="#888888"
                android:textColorHint="#DDDDDD"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_save"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginHorizontal="24dp"
                android:layout_marginVertical="56dp"
                android:background="@drawable/btn_primary"
                android:text="@string/save"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>
</layout>
